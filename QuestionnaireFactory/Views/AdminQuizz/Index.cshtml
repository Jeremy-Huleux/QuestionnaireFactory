@model IEnumerable<QuestionnaireFactory.Entities.Quizz>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AgentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodeUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PointArret)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomQuizz)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NiveauQuizz)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AgentId)
            </td>
            
           
            <td>
                @Html.DisplayFor(modelItem => item.NomQuizz)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Candidat.CandidatId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NiveauQuizz.NiveauQuizzId)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.CodeUrl)
            </td> 

            <td>
                <a asp-action="Edit" asp-route-id="@item.QuizzId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.QuizzId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.QuizzId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
